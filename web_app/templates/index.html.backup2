<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Waste Classifier</title>
  <link rel="stylesheet" href="/static/style.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
  <div class="container">
    <h1>♻️ Smart Waste Classifier</h1>

    <!-- Upload card -->
    <div class="upload-card">
      <label for="fileInput" class="upload-label">Choose an image</label>
      <input id="fileInput" type="file" accept="image/*" hidden>
      <div id="preview-container">
        <img id="preview" src="" alt="Preview" />
      </div>
      <button id="predictBtn" disabled>Predict</button>
    </div>

    <!-- Result -->
    <div id="result" class="hidden">
      <h2>Prediction Result</h2>
      <p id="top1"></p>
      <canvas id="chart"></canvas>
    </div>

    <!-- Loader -->
    <div id="loader" class="hidden">Analyzing...</div>
  </div>

  <script src="/static/script.js"></script>
</body>
</html>
